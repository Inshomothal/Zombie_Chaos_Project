{
   "format_version":"1.16.0",
   "minecraft:entity":{
      "description":{
         "identifier":"true:vortex_mixer_ready",
         "is_spawnable":true,
         "is_summonable":true,
         "is_experimental":false
      },
      "component_groups":{
         "true:default":{
            "minecraft:interact":{
               "interactions":[
                  {
                     "on_interact":{
                        "filters":{
                           "all_of":[
                              {
                                 "test":"has_equipment",
                                 "subject":"other",
                                 "domain":"hand",
                                 "value":"true:zombie_vaccine_unmixed"
                              }
                           ]
                        },
                        "event":"true:activate_mixer",
                        "target":"self"
                     },
                     "use_item":true,
                     "interact_text":"action.interact.insert_vaccine"
                  },
                  {
                     "on_interact":{
                        "filters":{
                           "all_of":[
                              {
                                 "test":"is_sneaking",
                                 "subject":"other",
                                 "operator":"==",
                                 "value":true
                              }
                           ]
                        },
                        "event":"true:recover",
                        "target":"self"
                     }
                  }
               ]
            }
         },
         "true:mixer_activated":{
            "minecraft:transformation":{
               "into":"true:vortex_mixer_mixing<from_default>"
            }
         },
         "true:despawn":{
            "minecraft:transformation":{
               "into":"true:despawn"
            }
         }
      },
      "components":{
         "minecraft:type_family":{
            "family":[
               "vortex_mixer"
            ]
         },
         "minecraft:collision_box":{
            "width":0.5,
            "height":0.5
         },
         "minecraft:health":{
            "value":20,
            "max":20
         },
         "minecraft:scale":{
            "value":1.0
         },
         "minecraft:behavior.float":{
            "priority":0
         },
         "minecraft:knockback_resistance":{
            "value":100,
            "max":100
         },
         "minecraft:physics":{
            
         }
      },
      "events":{
         "minecraft:entity_spawned":{
            "add":{
               "component_groups":[
                  "true:default"
               ]
            }
         },
         "true:activate_mixer":{
            "remove":{
               "component_groups":[
                  "true:default"
               ]
            },
            "add":{
               "component_groups":[
                  "true:mixer_activated"
               ]
            },
           "run_command":{
               "command":[
                  "execute @a [r=10] ~ ~ ~ playsound vortex_mixer"
               ]
            }
         },
         "true:recover":{
            "add":{
               "component_groups":[
                  "true:despawn"
               ]
            },
            "run_command":{
               "command":[
                  "give @p true:vortex_mixer_ready_spawn_egg 1"
               ]
            }
         },
         "from_default":{
            "add":{
               "component_groups":[
                  "true:default"
               ]
            }
         }
      }
   }
}