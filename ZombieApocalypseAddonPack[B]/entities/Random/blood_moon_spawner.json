{
   "format_version":"1.16.0",
   "minecraft:entity":{
      "description":{
         "identifier":"true:true_blood_moon_spawner",
         "is_spawnable":false,
         "is_summonable":true,
         "is_experimental":false
      },
      "component_groups":{
         "true:default":{
            "minecraft:environment_sensor":{
               "triggers":[
                  {
                     "filters":{
                        "all_of":[
                           {
                              "test":"moon_phase",
                              "operator":"==",
                              "value":1
                           },
                           {
                              "test":"hourly_clock_time",
                              "operator":">=",
                              "value":13000
                           },
                           {
                              "test":"hourly_clock_time",
                              "operator":"<",
                              "value":23000
                           }
                        ]
                     },
                     "event":"true:release_hoard"
                  }
               ]
            },
            "minecraft:timer":{
               "looping":false,
               "randomInterval":false,
               "time":4.0,
               "time_down_event":{
                  "event":"true:times_up"
               }
            }
         },
         "true:hoard_released":{
            "minecraft:spawn_entity":{
               "entities":[
                  {
                     "min_wait_time":1,
                     "max_wait_time":1,
                     "spawn_entity":"true:true_zombie_generic_runner",
                     "spawn_event":"minecraft:entity_spawned",
                     "single_use":true,
                     "num_to_spawn":10,
                     "should_leash":false
                  }
               ]
            },
            "minecraft:timer":{
               "looping":false,
               "randomInterval":false,
               "time":2.0,
               "time_down_event":{
                  "event":"true:times_up"
               }
            }
         },
         "true:despawn":{
            "minecraft:transformation":{
               "into":"true:despawn"
            }
         }
      },
      "components":{
         "minecraft:type_family":{
            "family":[
               "blood_moon_spawner"
            ]
         },
         "minecraft:collision_box":{
            "width":0.6,
            "height":1.8
         },
         "minecraft:health":{
            "value":400,
            "max":400
         },
         "minecraft:scale":{
            "value":1.0
         },
         "minecraft:movement":{
            "value":0.0
         },
         "minecraft:movement.basic":{
            
         },
         "minecraft:navigation.walk":{
            "avoid_damage_blocks":false,
            "avoid_portals":false,
            "avoid_sun":false,
            "avoid_water":false,
            "can_breach":false,
            "can_break_doors":true,
            "can_jump":true,
            "can_open_doors":true,
            "can_open_iron_doors":true,
            "can_pass_doors":true,
            "can_path_from_air":false,
            "can_path_over_lava":false,
            "can_path_over_water":true,
            "can_sink":true,
            "can_swim":true,
            "can_walk":true,
            "can_walk_in_lava":false,
            "is_amphibious":false
         },
         "minecraft:despawn":{
            "filters":{
               "test":"distance_to_nearest_player",
               "subject":"self",
               "operator":">",
               "value":64
            }
         },
         "minecraft:pushable":{
            "is_pushable":true,
            "is_pushable_by_piston":true
         },
         "minecraft:physics":{
            
         },
         "minecraft:behavior.float":{
            "priority":0
         }
      },
      "events":{
         "minecraft:entity_spawned":{
            "add":{
               "component_groups":[
                  "true:default"
               ]
            }
         },
         "true:release_hoard":{
            "remove":{
               "component_groups":[
                  "true:default"
               ]
            },
            "add":{
               "component_groups":[
                  "true:hoard_released"
               ]
            }
         },
         "true:times_up":{
            "remove":{
               "component_groups":[
                  "true:hoard_released"
               ]
            },
            "add":{
               "component_groups":[
                  "true:despawn"
               ]
            }
         }
      }
   }
}