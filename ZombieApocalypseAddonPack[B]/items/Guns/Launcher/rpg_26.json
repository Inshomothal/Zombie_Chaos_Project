{
   "format_version":"1.16.100",
   "minecraft:item":{
      "description":{
         "identifier":"true:rpg_26",
         "category":"equipment"
      },
      "components":{
         "minecraft:creative_category":{
            "parent":"itemGroup.name.equipment"
         },
         "minecraft:max_stack_size":1,
         "minecraft:use_duration":2.0,
         "minecraft:cooldown":{
            "duration":2.0,
            "category":"rpg_26"
         },
         "minecraft:icon":{
            "texture":"rpg_26"
         },
         "minecraft:display_name":{
            "value":"§7RPG 26"
         },
         "minecraft:durability":{
            "max_durability":3
         },
         "minecraft:on_use":{
            "on_use":{
               "event":"true:shoot",
               "target":"self"
            }
         },
           "minecraft:weapon":{
            "on_hurt_entity":{
               "event":"damage",
               "target":"self"
            },
            "on_not_hurt_entity":{
               "event":"damage",
               "target":"self"
            },
            "on_hit_block":{
               "event":"damage",
               "target":"self"
            }
         },
         "minecraft:hand_equipped":true
      },
      "events":{
         "true:shoot":{
            "sequence":[
               {
                  "sequence":[
                     {
                        "condition":"query.remaining_durability>=1",
                        "sequence":[
                           {
                              "sequence":[
                                 {
                                    "damage":{
                                       "type":"durability",
                                       "amount":1,
                                       "target":"self"
                                    }
                                 },
                                 {
                                    "shoot":{
                                       "projectile":"true:grenade_from_launcher",
                                       "launch_power":2.0
                                    }
                                 },
                                 {
                                    "run_command":{
                                       "command":[
                                          "execute @a [r=32] ~ ~ ~ playsound rpg_26_shooting",
                                          "execute @s ~ ~ ~ particle minecraft:llama_spit_smoke ^-1 ^1 ^3"
                                       ],
                                       "target":"holder"
                                    }
                                 }
                              ]
                           }
                        ]
                     },
                     {
                        "condition":"query.remaining_durability==3",
                        "run_command":{
                           "command":[
                              "execute @s ~ ~ ~ title @s actionbar §e[2/3]"
                           ],
                           "target":"holder"
                        }
                     },
                     {
                        "condition":"query.remaining_durability==2",
                        "run_command":{
                           "command":[
                              "execute @s ~ ~ ~ title @s actionbar §e[1/3]"
                           ],
                           "target":"holder"
                        }
                     },
                     {
                        "condition":"query.remaining_durability==1",
                        "run_command":{
                           "command":[
                              "execute @s ~ ~ ~ title @s actionbar §a[EMPTY]"
                           ],
                           "target":"holder"
                        }
                     },
                     {
                        "condition":"query.remaining_durability==0",
                        "run_command":{
                           "command":[
                              "playsound empty_gun @s ~ ~ ~",
                              "execute @s ~ ~ ~ title @s actionbar §c<DISPOSE>"
                           ],
                           "target":"holder"
                        }
                     }
                  ]
               }
            ]
         }
      }
   }
}