{
   "format_version":"1.16.100",
   "minecraft:item":{
      "description":{
         "identifier":"true:awm",
         "category":"equipment"
      },
      "components":{
         "minecraft:creative_category":{
            "parent":"itemGroup.name.equipment"
         },
         "minecraft:max_stack_size":1,
         "minecraft:use_duration":0.1,
         "minecraft:cooldown":{
            "duration":0.9,
            "category":"awm"
         },
         "minecraft:icon":{
            "texture":"awm"
         },
         "minecraft:display_name":{
            "value":"§7[AWM]"
         },
         "minecraft:durability":{
            "max_durability":5
         },
         "minecraft:on_use":{
            "on_use":{
               "event":"true:shoot",
               "target":"self"
            }
         },
           "minecraft:weapon":{
            "on_hurt_entity":{
               "event":"damage",
               "target":"self"
            },
            "on_not_hurt_entity":{
               "event":"damage",
               "target":"self"
            },
            "on_hit_block":{
               "event":"damage",
               "target":"self"
            }
         },
         "minecraft:hand_equipped":true
      },
      "events":{
         "true:shoot":{
            "sequence":[
               {
                  "sequence":[
                     {
                        "condition":"query.remaining_durability>=1",
                        "sequence":[
                           {
                              "sequence":[
                                 {
                                    "damage":{
                                       "type":"durability",
                                       "amount":1,
                                       "target":"self"
                                    }
                                 },
                                 {
                                    "shoot":{
                                       "projectile":"true:awm_bullet",
                                       "launch_power":4.0
                                    }
                                 },
                                 {
                                    "run_command":{
                                       "command":[
                                          "execute @a [r=32] ~ ~ ~ playsound awm_shooting",
                                          "execute @s ~ ~ ~ particle minecraft:llama_spit_smoke ^-1 ^1 ^3"
                                       ],
                                       "target":"holder"
                                    }
                                 }
                              ]
                           }
                        ]
                     },
                     {
                        "condition":"query.remaining_durability==5",
                        "run_command":{
                           "command":[
                              "execute @s ~ ~ ~ title @s actionbar §e[4/5]"
                           ],
                           "target":"holder"
                        }
                     },
                     {
                        "condition":"query.remaining_durability==4",
                        "run_command":{
                           "command":[
                              "execute @s ~ ~ ~ title @s actionbar §e[3/5]"
                           ],
                           "target":"holder"
                        }
                     },
                     {
                        "condition":"query.remaining_durability==3",
                        "run_command":{
                           "command":[
                              "execute @s ~ ~ ~ title @s actionbar §e[2/5]"
                           ],
                           "target":"holder"
                        }
                     },
                     {
                        "condition":"query.remaining_durability==2",
                        "run_command":{
                           "command":[
                              "execute @s ~ ~ ~ title @s actionbar §e[1/5]"
                           ],
                           "target":"holder"
                        }
                     },
                     {
                        "condition":"query.remaining_durability==1",
                        "run_command":{
                           "command":[
                           "give @p true:awm_magazine_empty 1",
                              "execute @s ~ ~ ~ title @s actionbar §a[EMPTY]"
                           ],
                           "target":"holder"
                        }
                     },
                     {
                        "condition":"query.remaining_durability==0",
                        "run_command":{
                           "command":[
                              "playsound empty_gun @s ~ ~ ~",
                              "execute @s ~ ~ ~ title @s actionbar §c<RELOAD>"
                           ],
                           "target":"holder"
                        }
                     }
                  ]
               },
               {
                  "condition":"query.equipped_item_all_tags('slot.weapon.offhand','true:awm_magazine')&&query.remaining_durability==0",
                  "run_command":{
                     "command":[
                        "clear @s true:awm_magazine 0 1",
                        "replaceitem entity @s slot.weapon.mainhand 0 true:awm 1 0"
                     ],
                     "target":"holder"
                  }
               }
            ]
         }
      }
   }
}