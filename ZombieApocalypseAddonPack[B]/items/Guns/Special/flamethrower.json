{
   "format_version":"1.16.100",
   "minecraft:item":{
      "description":{
         "identifier":"true:flamethrower",
         "category":"equipment"
      },
      "components":{
         "minecraft:creative_category":{
            "parent":"itemGroup.name.equipment"
         },
         "minecraft:max_stack_size":1,
         "minecraft:use_duration":0.01,
         "minecraft:cooldown":{
            "duration":0.01,
            "category":"flamethrower"
         },
         "minecraft:icon":{
            "texture":"flamethrower"
         },
         "minecraft:display_name":{
            "value":"§7[Flamethrower]"
         },
         "minecraft:durability":{
            "max_durability":250
         },
         "minecraft:on_use":{
            "on_use":{
               "event":"true:shoot",
               "target":"self"
            }
         },
   "minecraft:weapon":{
            "on_hurt_entity":{
               "event":"damage",
               "target":"self"
            },
            "on_not_hurt_entity":{
               "event":"damage",
               "target":"self"
            },
            "on_hit_block":{
               "event":"damage",
               "target":"self"
            }
         },
         "minecraft:hand_equipped":true
      },
      "events":{
         "true:shoot":{
            "sequence":[
               {
                  "sequence":[
                     {
                        "condition":"query.remaining_durability>=1",
                        "sequence":[
                           {
                              "sequence":[
                                 {
                                    "damage":{
                                       "type":"durability",
                                       "amount":1,
                                       "target":"self"
                                    }
                                 },
                                 {
                                    "shoot":{
                                       "projectile":"true:fire",
                                       "launch_power":1.0
                                    }
                                 },
                                 {
                                    "run_command":{
                                       "command":[
                                          "execute @p ~ ~ ~ playsound flamethrower_shooting",
                                          "execute @s ~ ~ ~ particle true:fire ^-1 ^1 ^3",
                                          "execute @s ~ ~ ~ particle true:fire ^-1 ^1 ^4",
                                          "execute @s ~ ~ ~ particle true:fire ^-1 ^1 ^5",
                                          "execute @s ~ ~ ~ particle true:fire ^-1 ^1 ^6",
                                          "execute @s ~ ~ ~ particle true:fire ^-1 ^1 ^8"
                                       ],
                                       "target":"holder"
                                    }
                                 }
                              ]
                           }
                        ]
                     },
                   
                     {
                        "condition":"query.remaining_durability==125",
                        "run_command":{
                           "command":[
                              "execute @s ~ ~ ~ title @s actionbar §e[Half Tank Remaining]"
                           ],
                           "target":"holder"
                        }
                     },
                     {
                        "condition":"query.remaining_durability==1",
                        "run_command":{
                           "command":[
                              "execute @s ~ ~ ~ title @s actionbar §a[EMPTY]"
                           ],
                           "target":"holder"
                        }
                     },
                     {
                        "condition":"query.remaining_durability==0",
                        "run_command":{
                           "command":[
                              "playsound flamethrower_empty @s ~ ~ ~",
                              "execute @s ~ ~ ~ title @s actionbar §c<EMPTY>"
                           ],
                           "target":"holder"
                        }
                     }
                  ]
               }
            ]
         }
      }
   }
}